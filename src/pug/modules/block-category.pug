<div class="block-category">
    div(id="carouselExampleIndicators" class="carousel slide" data-ride="carousel")
        ol.carousel-indicators
            li( data-target="#carouselExampleIndicators" data-slide-to="0" class="active" )
            li( data-target="#carouselExampleIndicators" data-slide-to="1" )
        div.carousel-inner
            div(class="carousel-item active")
                img(class="d-block w-100" src="images/slide1.png" alt="First slide")
                div(class="carousel-caption d-none d-md-block")
                    h5 Заголовок слайда
                    p Текст слайда
            div(class="carousel-item")
                img(class="d-block w-100" src="images/slide2.png" alt="Second slide")
                div(class="carousel-caption d-none d-md-block")
                    h5 Заголовок слайда
                    p Текст слайда
        
        a( class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev")
            span( class="carousel-control-prev-icon" aria-hidden="true" )
            span( class="sr-only" ) Previous
        a( class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next")
            span( class="carousel-control-next-icon" aria-hidden="true" )
            span( class="sr-only" ) Next


-var categories = [{"class": "materials", "title": "Материалы", "btn": "На любой вкус"},{"class": "tools", "title": "Инструмент", "btn": "На все случаи"},{"class": "technics", "title": "Техника", "btn": "Для стройки"},{"class": "discount", "title": "Скидки", "btn": "На 360 товаров"},{"class": "delivery", "title": "Доставка", "btn": "Бесплатно"}];

    each cat in categories
        div(class=cat.class class="card new" )
            .row
                .col-md-6
                    .title #{cat.title}
                    a( href="#" class="btn") #{cat.btn}
                .col-md-6
                    .image
                        img( src="images/materials.png" alt="Эскиз доставки")